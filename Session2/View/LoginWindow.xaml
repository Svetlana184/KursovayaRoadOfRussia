<Window x:Class="Desktop.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:Desktop.ViewModel"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.View"
        mc:Ignorable="d"
        Title="Авторизация" Height="600" Width="450"
        Visibility="{Binding Visibility, Mode=TwoWay}"
        >
    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
         <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="0" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Войти в аккаунт</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="10 30" x:Name="Email" Text="{Binding Email}" materialDesign:HintAssist.Hint="Электронная почта"/>
        <PasswordBox Grid.Column="1" Grid.Row="2" Margin="10 30" x:Name="Password" materialDesign:HintAssist.Hint="Пароль"/>
       
        <StackPanel Orientation="Horizontal"  Grid.Column="1" Grid.Row="4" Margin="5" HorizontalAlignment="Center">
            <TextBlock>Ещё нет аккаунта?</TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top">
   
         <Hyperlink Click="Hyperlink_MouseDown_1" >Регистрация</Hyperlink>
            </TextBlock>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="3" Margin="10" Command="{Binding LoginCommand}" 
                CommandParameter="{Binding ElementName=Password}">
            Войти
        </Button>
    </Grid>
</Window>
