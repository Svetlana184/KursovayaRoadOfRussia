<Window x:Class="Session2.View.PersonWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialIcons ="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:vm="clr-namespace:Session2.ViewModel"
        xmlns:local="clr-namespace:Session2" 
        d:DataContext="{d:DesignInstance Type=vm:PersonViewModel}"
        mc:Ignorable="d"
        Title="PersonWindow" Height="590" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.75*"/>
            <RowDefinition Height="9.5*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <Button  x:Name="Button_Edit" Width="50" HorizontalAlignment="Right" Height="25" Margin="10 5" Content="{materialIcons:MaterialIconExt Kind=Pencil}" ToolTip="Перейти в режим редактирования"/>
        <Button x:Name="ButtonFire" Width="100" HorizontalAlignment="Left" Height="25" Margin="10 5" Content="{materialIcons:MaterialIconExt Kind=Fire}" ToolTip="Удалить сотрудника" />
        <StackPanel Grid.Row="1" Grid.Column="0" IsEnabled="{Binding IsEditable}">
            <TextBox x:Name="SurName" Margin="10  5" materialDesign:HintAssist.Hint="Surname" Text="{Binding EmployeeForForm.Surname_}">
            </TextBox>
            <TextBox x:Name="FirstName" Margin="10  5" materialDesign:HintAssist.Hint="First Name" Text="{Binding EmployeeForForm.Firstname_}"/>
            <TextBox x:Name="SecondName" Margin="10  5" materialDesign:HintAssist.Hint="Second Name" Text="{Binding EmployeeForForm.Secondname_}"/>
            <TextBox x:Name="Position" Margin="10  5" materialDesign:HintAssist.Hint="Position" Text="{Binding EmployeeForForm.Position_}"/>
            <TextBox x:Name="Phonework" Margin="10  5" materialDesign:HintAssist.Hint="Work Phone" Text="{Binding EmployeeForForm.Phonework_}"/>
            <TextBox x:Name="Phone"  Margin="10  5" materialDesign:HintAssist.Hint="Phone" Text="{Binding EmployeeForForm.Phone_}"/>
            <TextBox x:Name="Cabinet" Margin="10  5" materialDesign:HintAssist.Hint="Cabinet"  Text="{Binding EmployeeForForm.Cabinet_}"/>
            <TextBox x:Name="Email_" Margin="10  5" materialDesign:HintAssist.Hint="E-mail" Text="{Binding EmployeeForForm.Email_}"/>
            <TextBox x:Name="Department_" Margin="10  5" materialDesign:HintAssist.Hint="Department" Text="{Binding EmployeeForForm.Department_}"/>
            <ComboBox x:Name="IdBoss" Margin="10 5" materialDesign:HintAssist.Hint="Boss"  IsEditable="True" />
            <ComboBox x:Name="IdHelper" Margin="10 5" materialDesign:HintAssist.Hint="Helper"  IsEditable="True"/>
            <DatePicker x:Name="BirthDay" IsDropDownOpen="True" SelectedDateFormat="Short" Margin="10 5" materialDesign:HintAssist.Hint="Birth Day"/>
            <TextBox x:Name="Other" Margin="10 5" Height="40" materialDesign:HintAssist.Hint="Other"/>
        </StackPanel>
        <Button Grid.Row="2" Grid.Column="0" Content="Ок" Width="90" HorizontalAlignment="Right" Margin="10 5" Background="Green" Height="25" Command="{Binding AddEmp}" />
        <Button  Grid.Row="2" Grid.Column="0" Content="Отмена" Width="90" HorizontalAlignment="Left" Margin="10 5"  Height="25" />

        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" >
            <Button x:Name="LastButton" Content="Прошедшие" Height="25" Width="80" Background="LightGreen" FontSize="9" Foreground="White" Margin="10 0" />
            <Button x:Name="PresentButton" Content="Текущие" Height="25" Width="80" Background="Green" FontSize="9" Foreground="White" Margin="10 0" />
            <Button x:Name="FutureButton" Content="Будущие" Height="25" Width="80" Background="Green" FontSize="9" Foreground="White" Margin="10 0" />
            <Button x:Name="CloseButton" Height="25" Width="40" Background="Green" FontSize="9" Foreground="White" Margin="50 0 0 0" Content="{materialIcons:MaterialIconExt Kind=Close}" Click="CloseButton_Click"/>
        </StackPanel>
        <ListView x:Name="EventList" Grid.Column="1" Grid.Row="1">
            <Label Content="Обучения" FontSize="20"/>
            <ListBox  x:Name="StudyList" SelectedItem="{Binding SelectedCalendar}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Dates}">
                            <StackPanel  Background="LightGray" Margin="5">
                                <Label Content="{Binding EvName}" FontSize="18"/>
                                <Label Content="{Binding DescriptionStudy}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Width="40" Height="20" Margin="10 5" Content="{materialIcons:MaterialIconExt Kind=Delete}" ToolTip="Удалить мероприятие" Command="{Binding DeleteCommand}" CommandParameter="{Binding SelectedCalendar}"/>
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                           
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Content="Временное отсутствие" FontSize="20"/>
            <ListBox x:Name="SkipList" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Dates}">
                            <StackPanel Background="LightGray" Margin="5">
                                <Label Content="{Binding TypeOfAbsence_}"/>
                                <Label Content="{Binding Alternate_}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="Button_DeleteEvent" Width="40" Height="20" Margin="10 5" Content="{materialIcons:MaterialIconExt Kind=Delete}" ToolTip="Удалить мероприятие" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Content="Отпуск" FontSize="20"/>
            <ListBox  x:Name="VacationList" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Expander Header="{Binding Dates}">
                            <StackPanel Background="LightGray" Margin="5">
                                <Label Content="{Binding DescriptionStudy}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button Width="40" Height="20" Margin="10 5" Content="{materialIcons:MaterialIconExt Kind=Delete}" ToolTip="Удалить мероприятие" />
                                </StackPanel>
                            </StackPanel>
                        </Expander>
                        
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Label Content="Добавить мероприятие" FontSize="20"/>
            <Expander x:Name="AddEx">
                <StackPanel Height="230" x:Name="AddEvent">
                    <ComboBox x:Name="TypeOfEvent_" materialDesign:HintAssist.Hint="Type of event"/>
                    <ComboBox x:Name="NameOfStudy_" materialDesign:HintAssist.Hint="Name of study"/>
                    <DatePicker x:Name="DateStart_" IsDropDownOpen="True" SelectedDateFormat="Short" materialDesign:HintAssist.Hint="Date start"/>
                    <DatePicker x:Name="DateFinish_" IsDropDownOpen="True" SelectedDateFormat="Short" materialDesign:HintAssist.Hint="Date finish"/>
                    <ComboBox x:Name="IdAlternate_" materialDesign:HintAssist.Hint="Alternate"/>
                    <TextBox Height="50" x:Name="Description_" materialDesign:HintAssist.Hint="Short Description"/>
                    <StackPanel Orientation="Horizontal" Width="630" >
                        <Button Content="Отмена" HorizontalAlignment="Left" Margin="5" VerticalAlignment="Center"/>
                        <Button Content="Ок" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>
            </Expander>
            
        </ListView>
        
    </Grid>
   
</Window>
