<Window x:Class="Desktop.View.RegistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Desktop.View"
        mc:Ignorable="d"
        Title="RegistWindow" Height="600" Width="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1" Grid.Row="0" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">Создать аккаунт</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="1" Margin="10" x:Name="Surname" materialDesign:HintAssist.Hint="Фамилия"/>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="10" x:Name="Firstname" materialDesign:HintAssist.Hint="Имя"/>
        <TextBox Grid.Column="1" Grid.Row="3" Margin="10" x:Name="Secondname" materialDesign:HintAssist.Hint="Отчество"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="10" x:Name="Position" materialDesign:HintAssist.Hint="Должность"/>
        <TextBox Grid.Column="1" Grid.Row="5" Margin="10" x:Name="Phone" materialDesign:HintAssist.Hint="Рабочий телефон"/>
        <TextBox Grid.Column="1" Grid.Row="6" Margin="10" x:Name="Cabinet" materialDesign:HintAssist.Hint="Кабинет"/>
        <TextBox Grid.Column="1" Grid.Row="7" Margin="10" x:Name="Email" materialDesign:HintAssist.Hint="Электронная почта"/>
        <TextBox Grid.Column="1" Grid.Row="8" Margin="10" x:Name="Department" materialDesign:HintAssist.Hint="Отдел"/>
        <PasswordBox Grid.Column="1" Grid.Row="9" Margin="10" x:Name="Password" materialDesign:HintAssist.Hint="Пароль"/>
        <PasswordBox Grid.Column="1" Grid.Row="10" Margin="10" x:Name="RepeatPassword" materialDesign:HintAssist.Hint="Повтор пароля"/>
        <StackPanel Orientation="Horizontal"  Grid.Column="1" Grid.Row="12" Margin="5" HorizontalAlignment="Center">
            <TextBlock>Уже есть аккаунт?    </TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top">
   
                <Hyperlink Click="Hyperlink_MouseDown_1" >Войти</Hyperlink>
            </TextBlock>
        </StackPanel>
       
        <Button  Grid.Column="1" Grid.Row="11" Margin="10 5" Click="Button_Click" >
            Зарегистрироваться
        </Button>
    </Grid>
</Window>
