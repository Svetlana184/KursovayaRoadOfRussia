<Window x:Class="Desktop.View.RegistWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:materialIcons ="clr-namespace:Material.Icons.WPF;assembly=Material.Icons.WPF"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm ="clr-namespace:Desktop.ViewModel"
        xmlns:local="clr-namespace:Desktop.View"
        mc:Ignorable="d"
        Title="RegistWindow" Height="800" Width="450"
        Left="450"
        Top="100"
        WindowState="{Binding WindowState}">
    <Window.DataContext>
        <vm:RegistViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1.5*"/>
        </Grid.RowDefinitions>
        <Grid Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal">
                <Button Width="50" Height="60" Command="{Binding StateminCommand}" 
            Background="Transparent" BorderBrush="Transparent" 
            Foreground="BlueViolet" Content="{materialIcons:MaterialIconExt Kind=Minus, Size=20}" 
            VerticalContentAlignment="Top" VerticalAlignment="Top" HorizontalContentAlignment="Right" 
            HorizontalAlignment="Right" Margin="0 0 0 10"/>
                <Button Width="50" Height="60" Command="{Binding StatemaxCommand}" 
            Background="Transparent" BorderBrush="Transparent" 
            Foreground="BlueViolet" Content="{materialIcons:MaterialIconExt Kind=Maximize, Size=20}" 
            VerticalContentAlignment="Top" VerticalAlignment="Top" HorizontalContentAlignment="Right" 
            HorizontalAlignment="Right" Margin="0 0 0 10"/>
                <Button  Width="60" Height="50" Background="Transparent" BorderBrush="Transparent" Foreground="BlueViolet" Content="{materialIcons:MaterialIconExt Kind=Close, Size=20}" VerticalContentAlignment="Top" HorizontalContentAlignment="Right" 
            HorizontalAlignment="Right" VerticalAlignment="Top" Click="Button_Click" ></Button>
            </StackPanel>

        </Grid>

        <TextBlock Grid.Column="1" Grid.Row="1" Margin="10" HorizontalAlignment="Center" 
                   VerticalAlignment="Center" FontSize="30">Создать аккаунт</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="2" Margin="10" x:Name="Surname" 
                 materialDesign:HintAssist.Hint="Фамилия" 
                 Text="{Binding SelectedEmployee.Surname, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Grid.Column="1" Grid.Row="3" Margin="10" x:Name="Firstname" 
                 materialDesign:HintAssist.Hint="Имя"
                 Text="{Binding SelectedEmployee.FirstName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Column="1" Grid.Row="4" Margin="10" x:Name="Secondname" 
                 materialDesign:HintAssist.Hint="Отчество"
                 Text="{Binding SelectedEmployee.SecondName, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Column="1" Grid.Row="5" Margin="10" x:Name="Position" 
                 materialDesign:HintAssist.Hint="Должность"
                 Text="{Binding SelectedEmployee.Position, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Column="1" Grid.Row="6" Margin="10" x:Name="Phone" 
                 materialDesign:HintAssist.Hint="Рабочий телефон"
                 Text="{Binding SelectedEmployee.PhoneWork, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Column="1" Grid.Row="7" Margin="10" x:Name="Cabinet" 
                 materialDesign:HintAssist.Hint="Кабинет"
                 Text="{Binding SelectedEmployee.Cabinet, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBox Grid.Column="1" Grid.Row="8" Margin="10" x:Name="Email" 
                 materialDesign:HintAssist.Hint="Электронная почта"
                 Text="{Binding SelectedEmployee.Email, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
        <ComboBox Grid.Column="1" Grid.Row="9" x:Name="Department" materialDesign:HintAssist.Hint="Department"  ItemsSource="{Binding Deps}" 
                  DisplayMemberPath="DepartmentName" SelectedValuePath="IdDepartment"  />
        <PasswordBox Grid.Column="1" Grid.Row="10" Margin="10" x:Name="Password" 
                     materialDesign:HintAssist.Hint="Пароль"
                     />
        <PasswordBox Grid.Column="1" Grid.Row="11" Margin="10" x:Name="RepeatPassword" 
                     materialDesign:HintAssist.Hint="Повтор пароля"
                     />
        <StackPanel Orientation="Horizontal"  Grid.Column="1" Grid.Row="13" Margin="5" 
                    HorizontalAlignment="Center">
            <TextBlock>Уже есть аккаунт?    </TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top">
   
                <Hyperlink Click="Hyperlink_MouseDown_1" >Войти</Hyperlink>
            </TextBlock>
        </StackPanel>
       
        <Button  Grid.Column="1" Grid.Row="12" Margin="10 5" Click="Button_Click" >
            Зарегистрироваться
        </Button>
    </Grid>
</Window>
